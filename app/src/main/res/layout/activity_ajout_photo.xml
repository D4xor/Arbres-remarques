<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjoutPhoto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IV_photo_image"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:srcCompat="@drawable/pine_tree"/>

        <Button
            android:id="@+id/BT_photo_take"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_take_photo"
            android:onClick="changePhoto"/>

        <Button
            android:id="@+id/BT_photo_keep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_keep_photo"
            android:visibility="invisible"
            android:onClick="goToAjout"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>